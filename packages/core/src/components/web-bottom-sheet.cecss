:host {
  position: fixed;
	top: 0;
  left: 0;
	box-sizing: border-box;
	padding: 0;
	margin: 0;
	overflow: hidden;
}

.web-bottom-sheet {
  position: fixed;
	top: auto;
	bottom: var(--bottom);
	width: 100%;
  width: 100%;
	max-width: 100vw;
	height: 100%;
	max-height: 100dvh;
	padding: 0;
	margin: 0;
  border: none;

	&::backdrop {
		background-color: rgb(0 0 0 / 50%);
		-webkit-backdrop-filter: blur(8px);
		backdrop-filter: blur(8px);
	}
}

.default-style {
  box-sizing: border-box;
	width: 100%;
	color: white;
	background-color: #1d1b20;
	border-radius: 1rem 1rem 0 0;

	@media (prefers-color-scheme: light) {
		color: black;
		background-color: #f7f2fa;
		box-shadow: 0 1px 4px 0 rgb(0 0 0 / 37%);
	}
}

.drag-handle-wrapper {
	display: contents;
}

.default-drag-handle {
	position: relative;
	top: 0;
	flex-shrink: 0;
	height: 36px;
	cursor: grab;

	&:active {
		cursor: grabbing;
	}

	> .default-drag-handle-icon {
		position: absolute;
		left: 50%;
		width: 32px;
		height: 4px;
		margin: 16px 0;
		content: "";
		background-color: #ccc;
		border-radius: 2px;
		transform: translateX(-50%);
	}
}
